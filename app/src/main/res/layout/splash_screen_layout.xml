<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/splashIcon"
        android:layout_width="124dp"
        android:layout_height="113dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="250dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493"
        app:srcCompat="@drawable/splash_screen_icon" />
    <ImageView
        android:id="@+id/splashIcon1"
        android:layout_width="124dp"
        android:layout_height="113dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="250dp"
        android:transitionName="splashIcon"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493"
        app:srcCompat="@drawable/launcher_icon_1"/>


    <LinearLayout
        android:layout_width="122dp"
        android:layout_height="102dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/splashIcon"
        app:layout_constraintEnd_toEndOf="@+id/splashIcon"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="@+id/splashIcon"
        app:layout_constraintTop_toTopOf="@+id/splashIcon"
        app:layout_constraintVertical_bias="0.706">

        <com.eyalbira.loadingdots.LoadingDots
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            app:LoadingDots_auto_play="true"
            android:layout_marginTop="5dp"
            app:LoadingDots_dots_color="#757575"
            app:LoadingDots_dots_count="3"
            app:LoadingDots_dots_size="13dp"
            app:LoadingDots_dots_space="7dp"

            app:LoadingDots_jump_duration="300"
            app:LoadingDots_jump_height="4dp"

            app:LoadingDots_loop_duration="600"
            app:LoadingDots_loop_start_delay="10" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>